<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCategoryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_category_text"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="ADD CATEGORY"
        android:textSize="30sp"
        android:layout_margin="8sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_category_text"
        android:orientation="horizontal"
        android:id="@+id/add_category_LL"
        android:weightSum="3"
        android:layout_margin="8sp">

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/category_t_shirt"
            android:src="@drawable/tshirt"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/category_short_sleeve"
            android:src="@drawable/short_sleeve"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/category_long_sleeve"
            android:src="@drawable/long_sleeve"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>